<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Edonymyeon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/nanumsquare</item>
        <!-- StatusBar -->
        <item name="android:statusBarColor">@color/gray_b0b9d1</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="android:actionOverflowButtonStyle">@style/ToolbarOverFlowButton</item>
        <item name="android:listPreferredItemHeightSmall">70dp</item>
        <!-- Snackbar -->
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="snackbarButtonStyle">@style/SnackbarButton</item>
        <item name="snackbarTextViewStyle">@style/SnackbarText</item>
    </style>

    <style name="Theme.Edonymyeon" parent="Base.Theme.Edonymyeon" />

    <style name="ToolbarOverFlowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/blue_576b9e</item>
    </style>

    <style name="PopupMenuListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:divider">@color/blue_576b9e</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="colorControlNormal">@color/blue_576b9e</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Snackbar -->
    <style name="SnackbarStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
        <item name="android:layout_margin">18dp</item>
    </style>

    <style name="SnackbarButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/blue_576b9e</item>
    </style>

    <style name="SnackbarText" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/black_434343</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorOnSurface">@color/white_ffffff</item>
    </style>

    <!-- Text -->
    <style name="ITEM_TEXT_TITLE">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">"@color/black_434343"</item>
    </style>

    <style name="ITEM_CONTENT_TEXT_STYLE">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">"@color/black_434343"</item>
    </style>

    <style name="ITEM_WRITER_CREATED_AT_TEXT_STYLE">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">"@color/gray_615f5f"</item>
    </style>

    <style name="BUTTON_TEXT_STYLE">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BASIC_TEXT_STYLE">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BASIC_TEXT_EXPLANATION">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EDIT_TEXT_STYLE">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
